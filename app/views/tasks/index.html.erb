<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <% if task.completed == true %> <input type="checkbox" name = <%= task.title %> checked> <label for="<%= task.title %>"><%= link_to task.title , task_path(task) %></label> 
	<% else %> <input type="checkbox" name = <%= task.title %>> <label for="<%= task.title %>"><%= link_to task.title, task_path(task) %></label> 
	<% end %>
  <%= link_to "Suppr", task_path(task), method: :delete %> <br> 
<% end %>
</ul>
<%= link_to "Add a new task", tasks_new_path %>